# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# === REQUIRED CONFIGURATIONS ===

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_SERVICE_KEY=your-supabase-service-key

# API Keys (Required for core functionality)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# === OPTIONAL CONFIGURATIONS ===

# Audio/Video Generation (Optional but recommended)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
HEDRA_API_KEY=your-hedra-api-key

# Facebook Integration (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# === SERVER CONFIGURATION ===

# Environment
ENVIRONMENT=production
DEBUG=false

# Worker Configuration
WORKERS=4

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# API Rate Limiting (requests per minute)
RATE_LIMIT=60

# === LOGGING CONFIGURATION ===

# Logging
LOG_LEVEL=INFO
DB_LOGGING=true
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/sucana/app.log

# === PERFORMANCE CONFIGURATION ===

# Cache Settings (in seconds)
CACHE_TTL=3600

# Request Timeouts (in seconds)
REQUEST_TIMEOUT=600
CLAUDE_TIMEOUT=540

# File Size Limits (in MB)
MAX_UPLOAD_SIZE=100
MAX_AUDIO_SIZE=50
MAX_VIDEO_SIZE=200

# === STORAGE CONFIGURATION ===

# File Retention (in days)
FILE_RETENTION_DAYS=7

# Storage Paths (local storage)
AUDIO_STORAGE_PATH=/home/ubuntu/sucana-v4/backend/generated_audio
VIDEO_STORAGE_PATH=/home/ubuntu/sucana-v4/backend/generated_videos

# === SECURITY ===

# Secret key for sessions (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Trusted Hosts
TRUSTED_HOSTS=your-domain.com,www.your-domain.com

# === MONITORING ===

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Metrics (optional)
METRICS_ENABLED=false
METRICS_PORT=9090