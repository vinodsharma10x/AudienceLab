# Facebook Marketing API Configuration for Sucana v4

# Facebook App Configuration
# Get these from https://developers.facebook.com/apps/
FACEBOOK_APP_ID=751345707461824
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Facebook OAuth Redirect URI
# This should match the redirect URI configured in your Facebook app
FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook/callback

# Encryption Key for Token Storage
# Generate a secure key for production: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# Facebook API Configuration
FACEBOOK_API_VERSION=v23.0

# Rate Limiting Configuration
FACEBOOK_API_RATE_LIMIT_PER_HOUR=200
FACEBOOK_API_RATE_LIMIT_PER_DAY=4800

# Sync Configuration
DEFAULT_SYNC_INTERVAL_HOURS=4
MAX_CONCURRENT_SYNC_JOBS=3
SYNC_BATCH_SIZE=1000

# Data Retention (in days)
PERFORMANCE_DATA_RETENTION_DAYS=365
SYNC_LOG_RETENTION_DAYS=30

# Existing Sucana Configuration
# (Keep your existing environment variables here)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI/Claude Configuration
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# Development Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
